<Window x:Class="KinectCoordinateMapping.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect Coordinate Mapping" Height="600" Width="800"
        Loaded="Window_Loaded" Unloaded="Window_Unloaded">
    <Grid>
        <Image Name="camera" Width="640" Height="480" />
        <Canvas Name="canvas" Width="640" Height="480" />
        <StackPanel Grid.Row="1" Height="35" Orientation="Horizontal" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Name="btnColorMode" Content="Color" Width="100" Margin="20,0" Click="Mode_Click" />
            <Button Name="btnDepthMode" Content="Depth" Width="100" Margin="20,0" Click="Mode_Click" />
        </StackPanel>
    </Grid>
</Window>
